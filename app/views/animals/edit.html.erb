<h1>Editing <%= @animal.name %></h1>

<% if flash[:error] %>
  <p style='color:red;'>
    <%= flash[:error] %>
    <br/>
    <%= @animal.errors.full_messages.join(" - ") %>
  </p>
<% end %>

<%= form_for(@animal) do |form| %>
  <p>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :date_of_birth %>
    <%= form.date_select :date_of_birth,
                         start_year: 1900 %>
  </p>
  <p>
    <%= form.label :species_id %>
    <%= form.select(
            :species_id,
            options_for_select(
                species_options,
                selected: @animal.species_id
            )
        ) %>
  </p>

  <%= form.submit %>

<% end %>
